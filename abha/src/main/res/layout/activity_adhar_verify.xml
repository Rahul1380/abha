<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="close"
                android:src="@drawable/backico" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/ivClose"
                android:fillViewport="true"
                android:scrollbars="none">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/llMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/tvTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/product_sans_medium"
                                android:gravity="left"
                                android:text="@string/verifyadhar"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvVerifyLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/product_sans_regular"
                            android:gravity="left"
                            android:text="@string/otponmobile"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/llEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvAdharNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/product_sans_regular"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/ivEdit"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="15dp"
                                android:onClick="changeMobile"
                                android:src="@drawable/editico" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:gravity="center">

                                <EditText
                                    android:id="@+id/et_otp1"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:fontFamily="@font/product_sans_regular"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/et_otp2"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginLeft="15dp"
                                    android:fontFamily="@font/product_sans_regular"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"

                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/et_otp3"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginLeft="15dp"
                                    android:fontFamily="@font/product_sans_regular"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"

                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/et_otp4"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginLeft="15dp"
                                    android:fontFamily="@font/product_sans_regular"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"

                                    android:textColor="@color/black"
                                    android:textSize="16sp" />


                                <EditText
                                    android:id="@+id/et_otp5"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginLeft="15dp"
                                    android:fontFamily="@font/product_sans_regular"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"

                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/et_otp6"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:layout_marginLeft="15dp"
                                    android:fontFamily="@font/product_sans_regular"
                                    android:gravity="center"
                                    android:inputType="number"
                                    android:maxLength="1"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvResendTimer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/product_sans_medium"
                                android:gravity="left"
                                android:text="Resend OTP in 00:00"
                                android:textColor="@color/blulabel"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvResendOTP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/product_sans_medium"
                                android:gravity="left"
                                android:onClick="resendOTP"
                                android:text="@string/resendotp"
                                android:textColor="@color/blulabel"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvVerify"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/custom_blue_btn1"
                            android:fontFamily="@font/product_sans_medium"
                            android:gravity="center"
                            android:onClick="verifyABHA"
                            android:paddingLeft="15dp"
                            android:paddingTop="10dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="10dp"
                            android:text="@string/verify"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>
        </RelativeLayout>

        <include
            android:id="@+id/custom_progress"
            layout="@layout/custom_progress"
            android:visibility="gone" />
    </RelativeLayout>
</layout>